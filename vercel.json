{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "^/gallery/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable" 
      },
      "dest": "/gallery/$1"
    },
    {
      "src": "^/assets/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable" 
      },
      "dest": "/assets/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "^/sw.js$",
      "dest": "/sw.js",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "^/admin(?:/(.*))?$",
      "dest": "/index.html"
    },
    {
      "src": "^/(.*)$",
      "dest": "/index.html"
    }
  ]
}
